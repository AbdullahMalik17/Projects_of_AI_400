# =============================================================================
# AI-Powered Task Management System - Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
PROJECT_NAME="AI Task Manager"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
API_V1_PREFIX="/api/v1"

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# SQLite (Development)
DATABASE_URL="sqlite:///./taskmanager.db"

# PostgreSQL (Production - Uncomment when ready)
# DATABASE_URL="postgresql://user:password@localhost:5432/taskmanager"

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY="your-secret-key-here-min-32-characters-long-CHANGE-THIS-IN-PRODUCTION"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_DAYS=7

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"

# -----------------------------------------------------------------------------
# AI/LLM Configuration - Google Gemini
# -----------------------------------------------------------------------------
# Get API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key-here"
GEMINI_MODEL_NAME="gemini-2.0-flash-exp"

# OpenAI API Key (Optional)
OPENAI_API_KEY=""

# -----------------------------------------------------------------------------
# OpenAI Agent SDK Configuration (LiteLLM for Gemini)
# -----------------------------------------------------------------------------
AGENT_MODEL="litellm/gemini/gemini-2.0-flash-exp"
AGENT_TEMPERATURE=0.3
AGENT_MAX_TOKENS=2000

# -----------------------------------------------------------------------------
# Context and Conversation Settings
# -----------------------------------------------------------------------------
MAX_CONVERSATION_HISTORY=10
CONTEXT_WINDOW_SIZE=4000
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# =============================================================================
# Setup Instructions:
# 1. Copy: cp .env.example .env
# 2. Get Gemini API key: https://aistudio.google.com/app/apikey
# 3. Generate JWT secret: python -c "import secrets; print(secrets.token_hex(32))"
# 4. Update all placeholder values
# 5. Never commit .env to git
# =============================================================================
